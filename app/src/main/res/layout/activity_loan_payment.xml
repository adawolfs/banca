<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_loan_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adawolfs.banca.LoanPaymentActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etLoan"
        android:hint="NÃºmero de Prestamo"
        android:layout_marginTop="85dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etAccount"
        android:hint="Cuenta a Debitar"
        android:layout_below="@+id/etLoan"
        android:layout_alignStart="@+id/etLoan"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText4"
        android:hint="Monto a Debitar"
        android:layout_below="@+id/etAccount"
        android:layout_alignStart="@+id/etAccount"
        android:layout_marginTop="40dp" />

    <Button
        android:text="Pagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btLoan"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:layout_marginTop="40dp" />


</RelativeLayout>
